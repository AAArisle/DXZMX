/* pages/carType/search/search.wxss */

.pickerss{
  width: 60%;
}
.pickers{
  padding: 20px;
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.icon{
  width: 30px;
  height: 30px;
}
.pname{
  display: flex;
  justify-content: left;
  align-items: center;
}

.search-top{
  font-size: 28rpx;
  justify-content: center;
  align-items: center;
  display: flex;
  padding: 16rpx 32rpx;
}
.search-top clean{
  width: 20%;
  text-align: center;
}
.search-container{
  width: 95%;
  background-color: #f3f3f3;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  border-radius: 10rpx;
  display: flex;
  font-size: 32rpx;
}
.search-container icon{
  margin-right: 20rpx;
}
.search-container input{
  width: 100%;
}
.search-history{
  background-color: #fff;
  font-size:30rpx;
  width: 100%;
}
.search-history > view{
  padding:10rpx;
  margin-left: 30rpx;
  border-bottom:1rpx solid #efefef;
  font-size:30rpx;
  width: 90%;
  justify-content: space-between;
  align-items: center;
  display: flex;
}
.search-history > view:last-child{
  display: flex;
  width: 90%;
  justify-content: center;
  align-items: center;
}
.search-history > text{
  display: block;
  background-color: #efefef;
  color: rgba(0, 0, 0, 0.6);
  padding: 10rpx 0 10rpx 40rpx;
}
.close{
  color:rgba(191, 191, 191, 0.7);
  border-radius:50%;
  line-height:60rpx;
  text-align:center;
  height:60rpx;
  width:60rpx;
  font-size:26rpx;
}
.close::before {
    content: "\2716";
}