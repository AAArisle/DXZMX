/* pages/follow/follow.wxss */
.container {
  padding: 10px;
}

.header {
  display: flex;
  width: 110%;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  padding: 0;
  border-top: 1px solid rgb(0, 0, 0);
  border-bottom: 1px solid rgb(0, 0, 0);
  position: relative; /* 为了相对定位图标 */
}

.header text {
  font-size: 16px;
  font-weight: bold;
}
.icon-left {
  position: absolute;
  left: 10px;
  width: 20px;
  height: 20px;
}

.icon-right {
  width: 24px;
  height: 24px;
  margin-left: 10px;
}
.icons {
  position: absolute; /* 绝对定位 */
  left: 0px;
  display: flex;
}

.icon {
  width: 20px;
  height: 20px;
  margin-left: 10px;
}

.section {
  width: 100%;
  margin-top: 12px;
  margin-bottom: 170px;
}

.section-title {
  display: flex;
  font-size: 16px;
  font-weight: bold;
  align-items: center;
  margin-bottom: 10px;
}

.search-container {
  display: flex;
  align-items: center;
  width: 100%;
  position: relative;
}

.search-bar {
  flex: 1;
  padding: 5px 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-bottom: 10px;
}

.search-icon {
  position: absolute;
  margin-top: -10px;
  right: 10px;
  width: 20px;
  height: 20px;
}
.follow-list {
  display: flex;
  flex-wrap: wrap;
}

.follow-item {
  width: 80px;
  height: 80px;
  border: 1px solid #ccc;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 5px;
  position: relative;
}

.follow-item text {
  font-size: 14px;
}

.follow-item .icon {
  position: absolute;
  top: 5px;
  right: 5px;
  width: 20px;
  height: 20px;
}