/* pages/follow/follow.wxss */
page{
  background-color:#ededed;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

.search-box {
  width: 100%;
  margin-bottom: 20rpx;
  border: 2rpx solid black;  /* 黑色边框 */
  border-radius: 10rpx;
}

.search-box input {
  width: 100%;
  height: 80rpx;
  border: none;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.latest-experience {
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.main-content {
  width: 100%;
  flex: 1;
  overflow-y: auto;
}

.experience-item {
  padding: 20rpx;
  margin-bottom: 40rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  position: relative;
}

.head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.userIcon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  background-color: white;
  border: 2rpx solid #ededed;
  padding: 5rpx;
}

.schoolLogo {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: white;
  border: 2rpx solid #ededed;
  padding: 5rpx;
}

.userinfo {
  flex: 1;
  padding-left: 70rpx; /* 确保文本不覆盖头像 */
}

.uname {
  font-size: 30rpx;
}

.uschool {
  font-size: 24rpx;
  color: rgb(146, 146, 146);
}

.body {
  margin-top: 20rpx;
}

.left {
  font-size: 34rpx;
  font-weight: 800;
  margin-bottom: 10rpx;
}

.content {
  font-size: 28rpx;
  color: #333;
}

.icons {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.icon-item {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}

.iimg, .iiimg {
  width: 25rpx;
  height: 25rpx;
  margin-right: 5rpx;
}

.datas_num {
  font-size: 28rpx;
}

.bottom-menu {
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 100rpx;
  background-color: #ededed;
  align-items: center;
}

.bottom-menu text {
  font-size: 28rpx;
}
