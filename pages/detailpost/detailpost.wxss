/* pages/detailpost/detailpost.wxss */
page{
  background-color:#ededed;
}

.background{
  background-color:#ffffff;
}

.schoolLogo{
  height: 50px;
  width: 50px;
  margin-top: 5px;
  margin-right: 5px;
}
.uschool{
  width: 100%;
  font-size: 15px;
  height: 20px;
  color: rgb(146, 146, 146);
}
.uname{
  width: 100%;
  height: 25px;
  display: block;
  margin-top: 7px;
}
.userinfo{
  width: 240px;
  height: 50px;
}
.userIcon{
  width: 40px;
  height: 40px;
  margin: 10px 10px;
}
.head{
  width: 100vw;
  height: 50px;
  display: flex;
  justify-content: left;
}

.right{
  width: 20%;
  margin-right: 5px;
}
.left{
  width: 80%;
  line-height: 25px;
  margin-left: 20px;
  margin-top: 5px;
  margin-bottom: 10px;
  font-size:17px;
  font-weight: 800;
}
.post{
  width: 100vw;
  display: flex;
  justify-content: space-between;
}
.topi{
  width: 30px;
  height: 30px;
  position: relative;
  top: 5px;
  left: 20px;
}

.body{
  width: 90%;
  margin-left: 5%;
  min-width: 300px;
  margin-bottom: 10px;
}

.iiimg{
  width: 25px;
  height: 25px;
  margin-top: 7px;
  margin-left: 5px;
}
.iimg{
  width: 25px;
  height: 25px;
  margin-top: 7px;
}
.icons{
  width: 100%;
  height: 40px;
  display: flex;
  margin-left: 600rpx;  
}

.item{
  width: 60px;
  height: 30px;
  line-height: 30px;
  margin-right: 5px;
  border: 1px solid rgb(185, 185, 185);
  text-align: center;
}
.tags{
  width: 90%;
  height: 30px;
  margin-left: 5%;
  display: flex;
  /* justify-content: center; */
  margin-top: 10px;
}


.itemss{
  width: 100%;
  margin-left: 0%;
  margin-right: 0%;
  display: flex;
}
.dimg{
  width: 24px;
  height: 24px;
  position: relative;
  top: 6px;
}
.dimg2{
  width: 24px;
  height: 24px;
  position: relative;
  top: 6px;
  transform: scaleY(-1);
}
.datas_num{
  position: relative;
  margin-left: 5px;
  top: 7px;
}
.datas{
  width: 100%;
  margin-left: 5%;
  display: flex;
  justify-content: center;
  margin-top: 20px;
  height: 35px;
  border-top: 1px solid #f3f3f3;
  border-bottom: 1px solid #f3f3f3;
  background-color: #ffffff;
}

.no_comment_notice{
  width: 100%;
  display: flex;
  justify-content: center;
  height: 100px;
  color: gray;
}

.tbar{
  display: flex;
  width: 100%;
}
.comment{
  width: 98%;
  margin-left: 5%;
}
.user{
  display: flex;
  width: 100%;
}
.avatar{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-left: -10px;
}
.nick_name{
  width: 60%;
  line-height: 40px;
  margin-left: 5px;
  font-size:20px;
}
.comment_date{
  color: rgb(192, 192, 192);
  line-height: 40px;
  margin-right: 10rpx;
}
.comment_body{
  width: 90%;
  margin-top: 5px;
  margin-left: 20px;
}
.comment_like{
  margin-top: 5px;
  margin-left: 20px;
  margin-bottom: 15px;
}
.comment_like_button{
  width: 20px;
  height: 20px;
  position: relative;
  top: 3px;
}
.comment_hate_button{
  width: 20px;
  height: 20px;
  position: relative;
  top: 3px;
  transform: scaleY(-1);
  margin-left: 10px;
}
.comment_delete_button{
  width: 18px;
  height: 18px;
  position: relative;
  top: 3px;
  margin-left: 400rpx;
}

.blank{
  height: 70px;
}

.buttons{
  width: 100%;
  display: grid;
  position: fixed;
  bottom: 0px;
}
.input{
  width: 100%;
  border:1px solid gray ;
  background-color:#eeeeee;
}
.btimg3{
  width: 45px;
  height: 45px;
  margin: 0 40rpx 0 40rpx; 
  position: relative;
  top: 5px;
}
.btimg4{
  width: 45px;
  height: 45px;
  margin: 0 40rpx 0 40rpx; 
  position: relative;
  transform: scaleY(-1);
  top: 5px;
}
.btimg{
  width: 50px;
  height: 50px;
  margin: 0 40rpx 0 40rpx;
  position: relative;
  top: 5px;
}
.bt{
  display: flex;
  justify-content: center;
  width: 100%;
  height: 60px;
  border-top:1px solid rgb(204, 204, 204) ;
  background-color:#ffffff;
}




