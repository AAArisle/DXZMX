<!--pages/detailpost/detailpost.wxml-->

<!-- 引入wxs脚本 -->
<wxs src="../../wxs/subutil.wxs" module="tools" />

<view class="background">
  <view class="head">
    <image src="{{article[0].avatar_url}}" class="userIcon"/>
    <view class="userinfo">
      <text class="uname">{{article[0].fields.author}}</text>
      <text class="uschool">大学名称 | {{tools.sub(article[0].fields.updated, 0, 10)}}更新</text>
    </view>
    <view class="schoolLogo">
      校徽
    </view>
  </view>

  <view class="post">
    <view class="left">
      {{article[0].fields.title}}
    </view>
    <view class="right">
      <image src="../../images/top.png" class="topi"/>
    </view>
  </view>

  <view class="content">
    <text>{{article[0].fields.body}}</text>
  </view>

  <view class="icons">
    <image src="../../images/edit.png" class="iimg"/>
    <image src="../../images/delete.png" class="iiimg"/>
  </view>

  <view class="tags">
    <view wx:for="{{[1,2,3,4,5,6,7]}}" wx:key="index" class="item">
      Tag
    </view>
  </view>

  <view class="datas">
    <view class="itemss">
      <image src="../../images/ll.png" class="dimg"/>
      {{article[0].fields.total_views}}
    </view>
    <view class="itemss">
      <image src="../../images/pl.png" class="dimg"/>
      评论数
    </view>
    <view class="itemss">
      <image src="../../images/dz.png" class="dimg"/>
      {{article[0].fields.likes}}
    </view>
  </view>
</view>
<t-divider></t-divider>

<view class="post">
  <view class="leftss">
    <image src="../../images/tx.png" class="tx"/>
  </view>
  <view class="rightss">
    <view class="rt">
      <view class="rtl">
      Han Sole
      </view>
      <view class="rtr">
        几秒前
      </view>
    </view>
    <view class="rc">
      We aupply a series of design principles,practical patterns and high quailty design resources (Sketch and Axure)
    </view>
    <view class="tb">
      <image src="../../images/dz.png" class="tbimg"/>0
      <image src="../../images/dz.png" class="tbsimg"/>0
      <image src="../../images/delete.png" class="tbimg"/>
    </view>
  </view>
</view>
<view class="bt">
  <image src="../../images/s.png" class="btimg3"/>
  <image src="../../images/pl.png" class="btimg"/>
  <image src="../../images/dz.png" class="btimg3"/>
</view>